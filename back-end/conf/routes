# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Most of the paths return some JSON packet that the frontend will render

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Fetchs a JSON representation of the board
GET     /board                      controllers.BoardController.board

# JSON Player data
GET     /player/:id                 controllers.PlayerController.show(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)
